  <%-include('includes/head') %>
  <%-include('includes/nav') %>

  <div class="container">
    <div class="col-lg my-5">
      <%- include('includes/messages'); %>

      <% if(contato._id){%>
        <h4>Edite o contato</h4>
        <form class="form-cadastro-contato" action="/contato/edit/<%=contato._id%>" method="POST">
      <% }else{%>
        <h4>Cadastre um novo contato</h4>
        <form class="form-cadastro-contato" action="/contato/register" method="POST">
        <% }%>
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>

        <div class="form-group">
          <label>Nome</label>
          <input value="<%= contato.nome%>" type="text" class="form-control" name="nome">
        </div>
        <div class="form-group">
          <label>E-mail</label>
          <input value="<%= contato.email%>" type="email" class="form-control" name="email">
        </div>
        <div class="form-group">
          <label>Telefone</label>
          <input value="<%= contato.telefone%>" type="tel" class="form-control" name="telefone">
        </div>
        <div class="form-group">
          <label>Endere√ßo</label>
          <input value="<%= contato.endereco%>" type="text" class="form-control" name="endereco">
        </div>
    
        <button type="submit" class="btn btn-primary my-3">Salvar</button>
      </form>

    </div>
  </div>
    <%-include('includes/footer') %>
